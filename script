    <script>
        // --- 0. EMAIL CONFIGURATION ---
        // IMPORTANT: You must sign up for a free account at EmailJS.com
        // Replace these empty strings with your actual keys to make email sending work.
        const EMAILJS_PUBLIC_KEY = ""; // e.g. "user_123456"
        const EMAILJS_SERVICE_ID = ""; // e.g. "service_gmail"
        const EMAILJS_TEMPLATE_ID = ""; // e.g. "template_welcome"

        // Initialize EmailJS
        (function() {
            if(EMAILJS_PUBLIC_KEY) emailjs.init(EMAILJS_PUBLIC_KEY);
        })();

        // --- 1. MOCK DATABASE ---
        const SCHOOLS = [
            { id: 1, name: "St. Thomas (TX)", state: "TX", coach: "Anthony Medina", email: "medinaa@stthom.edu", style: "high-intensity pressure defense" },
            { id: 2, name: "UNT Dallas", state: "TX", coach: "Joshua Howard", email: "athletics@untdallas.edu", style: "athletic transition offense" },
            { id: 3, name: "Amherst", state: "MA", coach: "Marlon Sears", email: "msears@amherst.edu", style: "defensive-first championship culture" },
            { id: 4, name: "Trine", state: "IN", coach: "Brooks Miller", email: "millerb@trine.edu", style: "physical half-court execution" },
            { id: 5, name: "Langston", state: "OK", coach: "Chris Wright", email: "christopher.wright@langston.edu", style: "smothering defensive identity" },
            { id: 6, name: "Randolph-Macon", state: "VA", coach: "Josh Merkel", email: "joshmerkel@rmc.edu", style: "gold-standard defensive discipline" },
            { id: 7, name: "Emory", state: "GA", coach: "Jason Zimmerman", email: "jzimme4@emory.edu", style: "high-IQ guard play" },
            { id: 8, name: "Pomona-Pitzer", state: "CA", coach: "Charles Katsiaficas", email: "ckatsiaf@pomona.edu", style: "elite academic and tactical balance" },
            { id: 9, name: "Kean", state: "NJ", coach: "David Turco", email: "dturco@kean.edu", style: "tough NJAC defensive grit" },
            { id: 10, name: "Grace", state: "IN", coach: "Scott Moore", email: "moores@grace.edu", style: "selfless offensive flow" }
        ];

        // --- 2. STATE MANAGEMENT ---
        let user = JSON.parse(localStorage.getItem('nl_user')) || null;
        let settings = JSON.parse(localStorage.getItem('nl_settings')) || { class:'2027', pos:'Guard', hs:'', gpa:'', film:'', summary:'' };
        let favorites = JSON.parse(localStorage.getItem('nl_favs')) || [];
        let sentLog = JSON.parse(localStorage.getItem('nl_sent')) || [];
        let isLoginMode = false;

        // --- 3. AUTH LOGIC ---
        function toggleAuthMode() {
            isLoginMode = !isLoginMode;
            const title = document.getElementById('authSubtitle');
            const btn = document.getElementById('authBtn');
            const toggleText = document.getElementById('toggleText');
            const toggleBtn = document.getElementById('toggleBtn');
            const nameGroup = document.getElementById('nameGroup');

            if (isLoginMode) {
                title.innerText = "Member Login";
                btn.innerText = "Log In";
                toggleText.innerText = "New athlete?";
                toggleBtn.innerText = "Sign Up";
                nameGroup.style.display = 'none';
            } else {
                title.innerText = "Create Athlete Account";
                btn.innerText = "Sign Up";
                toggleText.innerText = "Already have an account?";
                toggleBtn.innerText = "Log In";
                nameGroup.style.display = 'block';
            }
        }

        function handleAuthSubmit() {
            const email = document.getElementById('authEmail').value;
            const pass = document.getElementById('authPass').value;

            if (!email || !pass) return showToast("Error", "Please fill all fields.");

            if (isLoginMode) {
                // LOGIN FLOW
                const storedUser = JSON.parse(localStorage.getItem('nl_user'));
                if (storedUser && storedUser.email === email && storedUser.pass === pass) {
                    user = storedUser;
                    checkAuth();
                    showToast("Welcome Back", "Login successful.");
                } else {
                    showToast("Error", "Invalid email or password.");
                }
            } else {
                // SIGNUP FLOW
                const name = document.getElementById('authName').value;
                if (!name) return showToast("Error", "Name is required for sign up.");
                
                user = { name, email, pass };
                localStorage.setItem('nl_user', JSON.stringify(user));
                
                // SEND WELCOME EMAIL via AI/EmailJS
                sendWelcomeEmail(email, name);
                
                checkAuth();
            }
        }

        function sendWelcomeEmail(toEmail, toName) {
            const aiMessage = `Welcome to NextLevel, ${toName}. Your recruiting profile has been initialized. Proceed to your dashboard to configure your archetype and begin your outreach.`;
            
            showToast("Account Created", "Generating AI Strategy...");

            if(EMAILJS_PUBLIC_KEY) {
                emailjs.send(EMAILJS_SERVICE_ID, EMAILJS_TEMPLATE_ID, {
                    to_name: toName,
                    to_email: toEmail,
                    message: aiMessage
                }).then(() => {
                    showToast("Email Sent", "Check your inbox for your strategy.");
                }, (err) => {
                    console.log('Email error:', err);
                    showToast("System", "Dashboard access granted.");
                });
            } else {
                // Fallback simulation if no API keys present
                setTimeout(() => {
                    showToast("Simulation", `Email 'sent' to ${toEmail} (Configure keys to send real email)`);
                }, 1500);
            }
        }

        function checkAuth() {
            if(user) {
                document.getElementById('authView').classList.add('hidden-view');
                document.getElementById('appView').classList.remove('hidden-view');
                document.getElementById('appView').classList.add('flex');
                document.getElementById('userBadge').innerText = user.name;
                
                if(!settings.hs) document.getElementById('settingsAlert').style.display = 'inline-block';
                else document.getElementById('settingsAlert').style.display = 'none';

                renderSchoolList();
            }
        }

        function logout() {
            localStorage.removeItem('nl_user'); 
            location.reload();
        }

        // --- 4. NAVIGATION & TOASTS ---
        function navigate(viewName) {
            document.querySelectorAll('section').forEach(el => el.classList.add('hidden-view'));
            const target = document.getElementById(`view-${viewName}`);
            target.classList.remove('hidden-view');
            target.classList.add('fade-in');

            if(viewName === 'favorites') renderFavorites();
            if(viewName === 'sent') renderSentLog();
            if(viewName === 'settings') loadSettingsInputs();
        }

        function showToast(title, msg) {
            const container = document.getElementById('toast-container');
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.innerHTML = `<h4 class="font-bold text-slate-800 text-sm">${title}</h4><p class="text-xs text-slate-500">${msg}</p>`;
            container.appendChild(toast);
            setTimeout(() => toast.classList.add('show'), 100);
            setTimeout(() => { toast.classList.remove('show'); setTimeout(() => toast.remove(), 300); }, 3000);
        }

        // --- 5. DASHBOARD FUNCTIONS ---
        function renderSchoolList() {
            const val = document.getElementById('search').value.toLowerCase();
            const list = document.getElementById('schoolList');
            const filtered = SCHOOLS.filter(s => s.name.toLowerCase().includes(val) || s.state.toLowerCase().includes(val));

            list.innerHTML = filtered.map(s => `
                <label class="flex items-center p-3 bg-white rounded-xl cursor-pointer hover:bg-blue-50 transition border border-slate-100 group">
                    <input type="checkbox" value="${s.id}" onchange="updateCount()" class="check w-4 h-4 accent-blue-600 mr-3">
                    <div class="flex-1">
                        <div class="flex items-center gap-2 mb-0.5">
                            <p class="text-xs font-bold text-slate-800">${s.name}</p>
                            <span class="text-[9px] bg-blue-100 text-blue-600 px-1.5 rounded font-black">${s.state}</span>
                        </div>
                        <p class="text-[9px] text-slate-400 uppercase font-bold">Coach ${s.coach}</p>
                    </div>
                    <button onclick="toggleFav(event, ${s.id})" class="text-lg transition ${favorites.includes(s.id) ? 'text-yellow-400' : 'text-slate-200 hover:text-yellow-400'}">★</button>
                </label>
            `).join('');
        }

        function updateCount() {
            document.getElementById('selCount').innerText = `${document.querySelectorAll('.check:checked').length} Selected`;
        }

        function toggleFav(e, id) {
            e.preventDefault();
            const idx = favorites.indexOf(id);
            if(idx > -1) favorites.splice(idx, 1); else favorites.push(id);
            localStorage.setItem('nl_favs', JSON.stringify(favorites));
            renderSchoolList();
        }

        function generateDrafts() {
            if(!settings.hs) return showToast("Error", "Please complete your Profile Settings first.");
            const selectedIds = Array.from(document.querySelectorAll('.check:checked')).map(cb => parseInt(cb.value));
            const targets = SCHOOLS.filter(s => selectedIds.includes(s.id));
            const feed = document.getElementById('draftFeed');
            
            if(targets.length === 0) return showToast("Alert", "Select at least one school.");
            
            feed.innerHTML = "";
            targets.forEach(s => {
                const coachLast = s.coach.split(' ').pop();
                const subject = `${user.name} | ${settings.class} ${settings.pos} | ${settings.gpa} GPA`;
                const body = `Dear Coach ${coachLast},\n\nMy name is ${user.name}. I am a ${settings.pos} in the Class of ${settings.class} at ${settings.hs}. I currently hold a ${settings.gpa} GPA.\n\nI am interested in ${s.name} because I have followed your success and specifically your ${s.style}. I believe my game fits this culture perfectly.\n\n${settings.summary}\n\nFilm: ${settings.film}\n\nSincerely,\n${user.name}`;
                const link = `https://mail.google.com/mail/?view=cm&fs=1&to=${s.email}&su=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;

                feed.innerHTML += `
                <div class="bg-white p-5 rounded-2xl shadow-sm border border-slate-100 animate-in fade-in mb-4">
                    <div class="flex justify-between items-start mb-3">
                        <h3 class="font-bold text-slate-800 text-sm">${s.name}</h3>
                        <span class="text-[9px] bg-slate-100 text-slate-500 px-2 py-1 rounded font-bold">Draft Ready</span>
                    </div>
                    <a href="${link}" target="_blank" onclick="logSent(${s.id}, '${s.name}', '${s.coach}')" class="block w-full bg-slate-900 text-white text-[10px] font-black py-3 rounded-lg hover:bg-blue-600 transition-colors uppercase text-center">
                        Launch Email
                    </a>
                </div>`;
            });
        }

        function clearDrafts() {
            document.getElementById('draftFeed').innerHTML = '<div class="h-full flex flex-col items-center justify-center opacity-30"><p class="text-4xl font-black text-slate-300 mb-2">NO DRAFTS</p></div>';
            document.querySelectorAll('.check').forEach(cb => cb.checked = false);
            updateCount();
        }

        function logSent(id, schoolName, coachName) {
            sentLog.unshift({ id, school: schoolName, coach: coachName, date: new Date().toLocaleDateString() });
            localStorage.setItem('nl_sent', JSON.stringify(sentLog));
        }

        // --- 6. RENDERERS ---
        function renderFavorites() {
            const container = document.getElementById('favoritesList');
            const favSchools = SCHOOLS.filter(s => favorites.includes(s.id));
            if(favSchools.length === 0) { container.innerHTML = `<p class="text-slate-400">No favorites yet.</p>`; return; }
            container.innerHTML = favSchools.map(s => `
                <div class="bg-white p-6 rounded-2xl shadow-sm border border-slate-100 flex justify-between items-center">
                    <div><h3 class="font-bold text-slate-800">${s.name}</h3><p class="text-xs text-slate-400 uppercase font-bold">Coach ${s.coach}</p></div>
                    <button onclick="toggleFav(event, ${s.id}); renderFavorites()" class="text-red-400 hover:text-red-600 font-bold text-xs uppercase">Remove</button>
                </div>`).join('');
        }

        function renderSentLog() {
            const tbody = document.getElementById('sentTableBody');
            if(sentLog.length === 0) { tbody.innerHTML = `<tr><td colspan="4" class="p-8 text-center text-slate-400">No history found.</td></tr>`; return; }
            tbody.innerHTML = sentLog.map(log => `
                <tr class="border-b border-slate-50 hover:bg-slate-50"><td class="p-4 font-bold text-slate-800">${log.school}</td><td class="p-4 text-xs uppercase">${log.coach}</td><td class="p-4 text-xs font-mono">${log.date}</td><td class="p-4 text-right"><span class="bg-green-100 text-green-600 px-2 py-1 rounded text-[10px] font-bold uppercase">Sent</span></td></tr>
            `).join('');
        }

        // --- 7. SETTINGS ---
        function loadSettingsInputs() {
            document.getElementById('confClass').value = settings.class || '';
            document.getElementById('confPos').value = settings.pos || '';
            document.getElementById('confHS').value = settings.hs || '';
            document.getElementById('confGPA').value = settings.gpa || '';
            document.getElementById('confFilm').value = settings.film || '';
            document.getElementById('confSummary').value = settings.summary || '';
        }

        function updateAISummary() {
            const arch = document.getElementById('confArchetype').value;
            let text = "";
            if (arch === "lockdown") text = "I pride myself on being a 94-foot defender who disrupts offenses. I prioritize defensive connectivity and winning plays.";
            if (arch === "shooter") text = "I specialize in floor spacing and high-efficiency shooting. I take pride in my shot selection and gravitational pull.";
            if (arch === "playmaker") text = "I am a high-IQ facilitator who values ball security. I control the tempo and make winning reads.";
            if (arch === "slasher") text = "I am a relentless rim attacker who thrives in transition. I finish through contact and put pressure on the paint.";
            document.getElementById('confSummary').value = text;
        }

        function saveSettings() {
            settings = {
                class: document.getElementById('confClass').value,
                pos: document.getElementById('confPos').value,
                hs: document.getElementById('confHS').value,
                gpa: document.getElementById('confGPA').value,
                film: document.getElementById('confFilm').value,
                summary: document.getElementById('confSummary').value
            };
            localStorage.setItem('nl_settings', JSON.stringify(settings));
            showToast("Success", "Profile Updated");
            document.getElementById('settingsAlert').style.display = 'none';
        }

        // Auto-Check Auth on Load
        window.onload = () => {
            const storedUser = localStorage.getItem('nl_user');
            if (storedUser) {
                user = JSON.parse(storedUser);
                checkAuth();
            }
        };
    </script>
</body>
</html>
