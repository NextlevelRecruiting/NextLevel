        <div id="contentArea" class="flex-1 overflow-hidden relative">
            
            <section id="view-dashboard" class="absolute inset-0 p-4 md:p-8 overflow-y-auto custom-scrollbar flex flex-col md:flex-row gap-6">
                <div class="w-full md:w-1/3 flex flex-col gap-4">
                    <div class="bg-white p-6 rounded-3xl shadow-lg border border-slate-100 flex flex-col h-full max-h-[85vh]">
                        <h2 class="text-xl font-black italic text-slate-800 mb-4 uppercase tracking-tight">Database</h2>
                        <input type="text" id="search" onkeyup="renderSchoolList()" placeholder="Search State or School..." class="w-full p-4 bg-slate-50 border border-slate-200 rounded-xl font-bold text-sm outline-none focus:ring-2 focus:ring-blue-500 mb-4 transition-all">
                        
                        <div id="schoolList" class="flex-1 overflow-y-auto pr-2 custom-scrollbar space-y-2">
                            </div>

                        <div class="mt-4 pt-4 border-t border-slate-100 flex justify-between items-center">
                            <span id="selCount" class="text-xs font-bold text-blue-600">0 Selected</span>
                            <button onclick="generateDrafts()" class="bg-slate-900 text-white text-xs font-black px-6 py-3 rounded-xl hover:bg-blue-600 transition-all uppercase shadow-lg">Generate Drafts</button>
                        </div>
                    </div>
                </div>

                <div class="w-full md:w-2/3">
                    <div class="bg-white p-6 rounded-3xl shadow-lg border border-slate-100 h-full flex flex-col max-h-[85vh]">
                        <div class="flex justify-between items-center mb-4">
                            <h2 class="text-xl font-black italic text-slate-800 uppercase tracking-tight">Outreach Drafts</h2>
                            <button onclick="clearDrafts()" class="text-[10px] font-bold text-red-400 hover:text-red-600 uppercase">Clear</button>
                        </div>
                        <div id="draftFeed" class="flex-1 overflow-y-auto custom-scrollbar p-2 space-y-4 bg-slate-50 rounded-2xl border border-slate-100">
                            <div class="h-full flex flex-col items-center justify-center opacity-30">
                                <p class="text-4xl font-black text-slate-300 mb-2">NO DRAFTS</p>
                                <p class="text-xs font-bold uppercase tracking-widest text-slate-400">Select schools to begin</p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section id="view-favorites" class="hidden-view absolute inset-0 p-8 overflow-y-auto custom-scrollbar">
                <div class="max-w-4xl mx-auto">
                    <h2 class="text-3xl font-black italic text-slate-800 mb-6 uppercase tracking-tighter">My Favorites</h2>
                    <div id="favoritesList" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        </div>
                </div>
            </section>

            <section id="view-sent" class="hidden-view absolute inset-0 p-8 overflow-y-auto custom-scrollbar">
                <div class="max-w-4xl mx-auto">
                    <h2 class="text-3xl font-black italic text-slate-800 mb-6 uppercase tracking-tighter">Outreach History</h2>
                    <div class="bg-white rounded-3xl shadow-lg overflow-hidden border border-slate-100">
                        <table class="w-full text-left border-collapse">
                            <thead>
                                <tr class="bg-slate-50 border-b border-slate-100 text-xs font-bold text-slate-400 uppercase tracking-wider">
                                    <th class="p-4">School</th>
